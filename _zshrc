# on-my-zsh
ZSH=$HOME/.oh-my-zsh
ZSH_THEME="random"
source $ZSH/oh-my-zsh.sh

# Plugins for Mac
#plugins=(brew colorize git go golang history node npm screen themes vim-mode vim-interaction)
# Plugins for Linux
#plugins=(colorize cp git go golang history node npm screen themes torrent vi-mode sudo)
# Descomentar para que funcione mosh en Mac OS X:
#export LC_ALL="en_US.UTF-8"

# Exports
# Go
export GOPATH="$HOME/go"
export PATH="$GOPATH/bin:$PATH"
# Laptop Brightness keyboard and LCD
export PATH="$HOME/.bin:$PATH"
# i3 scripts
export PATH="$HOME/.i3/scripts:$PATH"

# Helpers
cdprojects(){cd ~/Projects/$1;}
compctl -W ~/Projects -/ cdprojects

# Alias
alias project-screen="screen -c $HOME/.screenrc-projects"

# ssh-agent handle
eval `keychain -q --eval --agents ssh id_rsa`

function cd {
    builtin cd "$@"
    RET=$?
    nmBin
    return $RET
}

function nmBin {
    grep 'flow-bin' package.json > /dev/null 2>&1
    if [ $? -eq 0 ]; then
        echo $PATH | grep $PWD/node_modules/.bin > /dev/null 2>&1
        if [ $? -eq  1 ]; then
            export PATH=$PATH:$PWD/node_modules/.bin
        fi
    fi
}

nmBin

export ANDROID_HOME=$HOME/Android/Sdk
export PATH=$PATH:$ANDROID_HOME/tools
export PATH=$PATH:$ANDROID_HOME/platform-tools

#THIS MUST BE AT THE END OF THE FILE FOR SDKMAN TO WORK!!!
export SDKMAN_DIR="/home/pitakill/.sdkman"
[[ -s "/home/pitakill/.sdkman/bin/sdkman-init.sh" ]] && source "/home/pitakill/.sdkman/bin/sdkman-init.sh"
