[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	d = diff
	dt = difftool
	ls = diff-tree --no-commit-id --name-only -r
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[push]
	default = simple
